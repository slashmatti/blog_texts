 .circle {
  height: 45px;
  width: 45px;
  background-color: #fff;
  border: 2px solid black;
  border-radius: 50%;
  display: inline-block;
}
.square {
  height: 45px;
  width: 45px;
  background-color: #fff;
  border: 2px solid black;
  display: inline-block;
}
.rectangle {
  height: 45px;
  width: 90px;
  background-color: #fff;
  border: 2px solid black;
  display: inline-block;
}
.shape-selected {
  background-color: blue;
}